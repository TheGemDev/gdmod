{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start the development watchers",
      "type": "shell",
      "command": "yarn && yarn start",
      "group": "build",
      "runOptions": { "instanceLimit": 1, "runOn": "folderOpen" },
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "yarn test",
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
